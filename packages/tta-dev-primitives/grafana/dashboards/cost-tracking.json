{
  "dashboard": {
    "title": "Cost Tracking",
    "tags": ["tta-dev", "cost", "optimization"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Cost",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(primitive_cost_total)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Total Savings",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(primitive_cost_savings_total)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "text"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Savings Rate",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(primitive_cost_savings_total) / (sum(primitive_cost_total) + sum(primitive_cost_savings_total))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.2, "color": "yellow"},
                {"value": 0.4, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cost Efficiency Score",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(sum(primitive_cost_savings_total) / (sum(primitive_cost_total) + sum(primitive_cost_savings_total))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 20, "color": "yellow"},
                {"value": 40, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Cost Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(primitive_cost_total[5m])",
            "legendFormat": "{{primitive_name}} cost",
            "refId": "A"
          },
          {
            "expr": "rate(primitive_cost_savings_total[5m])",
            "legendFormat": "{{primitive_name}} savings",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "Cost Rate ($/sec)"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Savings Over Time",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(primitive_cost_savings_total[5m])",
            "legendFormat": "{{primitive_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "Savings Rate ($/sec)"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Cost by Primitive",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(primitive_cost_total) by (primitive_name)",
            "refId": "A",
            "format": "time_series",
            "instant": true
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 8,
        "title": "Savings by Primitive",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(primitive_cost_savings_total) by (primitive_name)",
            "refId": "A",
            "format": "time_series",
            "instant": true
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 9,
        "title": "Cost Breakdown Table",
        "type": "table",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(primitive_cost_total) by (primitive_name)",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(primitive_cost_savings_total) by (primitive_name)",
            "refId": "B",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "primitive_name": "Primitive",
                "Value #A": "Total Cost",
                "Value #B": "Total Savings"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Total Cost"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "decimals", "value": 2}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Total Savings"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "decimals", "value": 2}
              ]
            }
          ]
        }
      }
    ]
  }
}
