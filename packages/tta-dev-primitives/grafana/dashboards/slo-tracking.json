{
  "dashboard": {
    "title": "SLO Tracking",
    "tags": ["tta-dev", "slo", "compliance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "SLO Compliance",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "primitive_slo_compliance",
            "legendFormat": "{{primitive_name}} - {{slo_name}}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 2,
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": {"x": 8, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "primitive_error_budget_remaining",
            "legendFormat": "{{primitive_name}} - {{slo_name}}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.1, "color": "orange"},
                {"value": 0.3, "color": "yellow"},
                {"value": 0.5, "color": "green"}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 3,
        "title": "SLO Compliance Over Time",
        "type": "graph",
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "primitive_slo_compliance",
            "legendFormat": "{{primitive_name}} - {{slo_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Compliance", "min": 0, "max": 1},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Error Budget Burn Rate (1h)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(1 - primitive_slo_compliance) / (1 - 0.95)",
            "legendFormat": "{{primitive_name}} - {{slo_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Burn Rate"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Error Budget Trend",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "primitive_error_budget_remaining",
            "legendFormat": "{{primitive_name}} - {{slo_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Error Budget", "min": 0, "max": 1},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "SLO Violations",
        "type": "table",
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "primitive_slo_compliance < 0.95",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "primitive_name": "Primitive",
                "slo_name": "SLO",
                "Value": "Compliance"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "Latency vs SLO Threshold",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(primitive_duration_seconds_bucket[5m])) by (le, primitive_name))",
            "legendFormat": "{{primitive_name}} p95 actual",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      }
    ]
  }
}
